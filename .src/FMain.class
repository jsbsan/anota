Public Sub Form_Open()

    settings.Read(Me)

    TextLabel1.text = ("Anotaciones")
    TextLabel2.text = ("Versi√≥n:") & Application.Version
    TextAreaNotas.text = File.load(User.Home & "/informacionNotas.txt")
